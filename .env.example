# Server Configuration
PORT=8000
HOST=0.0.0.0
ENV=development

# API Security
SSR_API_KEY=your_secure_api_key_here_generate_random_string

# CORS Settings
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Logging
LOG_LEVEL=INFO

# Google Gemini Configuration (for ad prediction)
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.5-flash
GEMINI_EMBEDDING_MODEL=models/text-embedding-004

# Ad Prediction Settings
DEFAULT_NUM_PERSONAS=20
MAX_IMAGE_WIDTH=2048
MAX_IMAGE_HEIGHT=2048

# Concurrency Settings
# Maximum concurrent LLM API calls for persona evaluation
# Free tier (15 RPM): Use 3-5
# Paid tier (1000 RPM): Use 50-100 for optimal throughput
MAX_CONCURRENT_LLM_CALLS=50
